<form class="form" action="/puppies/edit/{{id}}" method="post">
  <img class="img-circle" src="{{image}}" alt="{{name}}">
  <label for="name" class="form-item">
    Name:
    <input type="text" name="name" value="{{name}}">
  </label>
  
  <label for="class" class="form-item">
    Class:
    <input type="text" name="class" value="{{class}}">
  </label>
  
  <label for="race" class="form-item">
    Race:
    <input type="text" name="race" value="{{race}}">
  </label>

   <label for="weight" class="form-item">
    Weight:
    <input type="text" name="weight" value="{{weight}}">
  </label>

   <label for="gender" class="form-item">
    Gender:
    <input type="text" name="gender" value="{{gender}}">
  </label>

   <label for="size" class="form-item">
    Size:
    <input type="text" name="size" value="{{size}}">
  </label>

  <label for="description" class="form-item">
    Description:
    <input type="text" name="description" value="{{description}}">
  </label>
  
  <input type="submit" name="" value="Submit">
</form>